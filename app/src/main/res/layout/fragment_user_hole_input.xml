<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_hole_user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_hole_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/image_hole_user_avatar"
        app:layout_constraintStart_toStartOf="@+id/image_hole_user_avatar"
        app:layout_constraintTop_toBottomOf="@+id/image_hole_user_avatar"
        tools:text="Willie Owens" />

    <TextView
        android:id="@+id/text_hole_user_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_hole_user_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3" />

    <Button
        android:id="@+id/button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/text_hole_user_score"
        app:layout_constraintEnd_toStartOf="@+id/text_hole_user_score"
        app:layout_constraintTop_toTopOf="@+id/text_hole_user_score" />

    <Button
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/text_hole_user_score"
        app:layout_constraintStart_toEndOf="@+id/text_hole_user_score"
        app:layout_constraintTop_toTopOf="@+id/text_hole_user_score" />
</androidx.constraintlayout.widget.ConstraintLayout>